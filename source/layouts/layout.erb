<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title><%= page_title %></title>
    <meta name="description" content="<%= page_description %>"/>
    <meta name="keywords" content="design, web design, HTML5, CSS3, typography, layout, grids, javascript, ruby, ruby on rails, wordpress, php, middleman app, games, web applications, ottawa"/>
    <!--<meta name="viewport" content="width=device-width, initial-scale=1">-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <%= yield_content :javascript %>
    <%= stylesheet_link_tag "site", data: { turbolinks_track: true }  %>
    <link href="/images/favicon.ico" rel="shortcut icon"></link>
    <script src="//use.typekit.net/gmc4yrr.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
    <!--[if (gt IE 9)|!(IE)]><!-->
      <%= javascript_include_tag "reactize.min.js" %>
      <script>
        Turbolinks.enableProgressBar();
        Turbolinks.enableTransitionCache();
      </script>
    <!--<![endif]-->
    <%= javascript_include_tag "application", data: { turbolinks_track: true } %>
    <!--[if lt IE 9]>
      <%= javascript_include_tag("html5shiv.min.js") %>
    <![endif]-->
    <% if development? %>
      <%= javascript_include_tag "gridset-overlay" %>
      <style>
        .gridsetoverlaywrap {
          opacity: 0.5;
        }
      </style>
    <% end %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-3660187-2', 'auto');
    </script>
  </head>
  <body id="olliekav">
    <div id="wrapper"<%= custom_page_classes %>>
      <%= partial "header" %>
      <main id="main" role="main">
        <%= yield %>
      </main>
      <%= partial "work_navigation" if current_page.data.work_item == true %>
    </div>
    <% if build? %>
      <script>
        ga('send', 'pageview');
      </script>
    <% end %>
  </body>
</html>